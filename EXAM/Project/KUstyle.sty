\def\maketitle{
    \thispagestyle{empty}
    \AddToShipoutPictureBG*{\includegraphics[width=\paperwidth,height=\paperheight]{ucph.pdf}}
    \
    
    
    \begin{textblock}{10}(1.5,3.3) \noindent\fontsize{23}{23}\selectfont \textbf{\@ptype}
    \end{textblock}
    

    \ifdefined\@title
        \begin{textblock}{10}(1.5,8)
        \noindent\fontsize{23}{23}\selectfont \textbf{\@title}
        \end{textblock}
    \fi
    

    \ifdefined\@author
        \begin{textblock}{10}(1.5,5) 
        \noindent\fontsize{17}{17}\selectfont \textbf{\@author}
        \end{textblock}
    \fi
    
    \begin{textblock}{10}(1.5,12.5)
    \noindent\fontsize{15}{15}\selectfont \textbf{\@date}
    \end{textblock}
    
    \ifdefined\@contribution
        \begin{textblock}{10}(1.5,13.5)
        \noindent\fontsize{15}{15}\selectfont \textbf{\@contribution}
        \end{textblock}
    \fi

    \ifdefined\@keystrokes
        \begin{textblock}{10}(1.5,13)
        \noindent\fontsize{15}{15}\selectfont \textbf{\@keystrokes}
        \end{textblock}
    \fi

    
    \newpage
    \noindent
}